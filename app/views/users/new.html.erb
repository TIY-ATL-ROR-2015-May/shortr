<h1>Sign Up</h1>

<%= form_tag(users_path, method: :post) do %>

  <div>
    <%= label_tag(:email, "Email: ") %>
    <%= text_field_tag(:email, nil, size: 40) %>
  </div>

  <div>
    <%= label_tag(:password, "Password: ") %>
    <%= password_field_tag(:password) %>
  </div>

  <%= submit_tag("Register!") %>
<% end %>
